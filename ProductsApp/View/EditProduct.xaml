<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:ProductsApp.Model"
             x:Class="ProductsApp.View.EditProduct"
             x:DataType="model:Product">
    <ContentPage.Content>
        
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Edit Product"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Product Name"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18" />

            <Entry
                Text="{Binding ProductName}"
                Placeholder="Enter Product name..." />

            <Label
                Text="Price"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18" />

            <Entry
                Text="{Binding Price}"
                Placeholder="Enter Product price..."
                Keyboard="Numeric" />

            <Label
                Text="Quantity"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18" />

            <Entry
                Text="{Binding Quantity}"
                Placeholder="Enter Product quantity..."
                Keyboard="Numeric" />

            <HorizontalStackLayout
                Spacing="15"
                HorizontalOptions="Start">

                <Label
                    Text="Available"
                    SemanticProperties.HeadingLevel="Level3"
                    FontSize="18" />

                <Switch
                    IsToggled="{Binding IsAvailable}" />

            </HorizontalStackLayout>


            <HorizontalStackLayout
                Spacing="15"
                HorizontalOptions="Center">

                <Button
                    Command="{Binding PostProductCommand}"
                    x:Name="AddProductSaveBtn"
                    Text="Save"
                    SemanticProperties.Hint="Save your Product"
                    HorizontalOptions="Center" />

                <Button
                    Command="{Binding DeleteProductCommand}"
                    x:Name="AddProductCancelBtn"
                    Text="Delete"
                    SemanticProperties.Hint="Delete Product"
                    HorizontalOptions="Center" />

            </HorizontalStackLayout>


        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>