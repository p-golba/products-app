<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductsApp.MainPage"
             Title="Products App">
    <ContentPage.Content>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Products App!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button
                x:Name="AddProductBtn"
                Clicked="AddProductBtn_OnClicked"
                Text="Add Product"
                SemanticProperties.Hint="Create your product"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Clicked="CounterBtn_OnClicked"
                Text="List of products"
                SemanticProperties.Hint="Display your product list"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>